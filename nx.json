{
    "$schema": "./node_modules/nx/schemas/nx-schema.json",
    "namedInputs": {
        "default": [
            "{projectRoot}/**/*",
            "sharedGlobals"
        ],
        "production": [
            "default"
        ],
        "sharedGlobals": []
    },
    "npmScope": "finance",
    "targetDefaults": {
        "build": {
            "dependsOn": [
                "^build"
            ],
            "inputs": [
                "production",
                "^production"
            ]
        }
    },
    "tasksRunnerOptions": {
        "default": {
            "options": {
                "cacheableOperations": [
                    "build",
                    "lint",
                    "test",
                    "e2e"
                ]
            },
            "runner": "nx/tasks-runners/default"
        }
    },
    "workspaceLayout": {
        "appsDir": "apps",
        "libsDir": "libs"
    }
}